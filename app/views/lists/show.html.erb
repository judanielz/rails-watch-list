<h1> <%= @list.name %> </h1>


<h2>Films dans cette liste :</h2>
<div class="movies-container">
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= image_tag "affiche.png", alt: "Affiche du film", class: "movie-image" %>

      <div class = film-info>

      <strong><%= bookmark.movie.title %></strong>
      <p><%= bookmark.comment %></p>
      <%= link_to "âŒ Supprimer", bookmark_path(bookmark), method: :delete, data: { confirm: "Voulez-vous vraiment supprimer ce film de la liste ?" }, class: "btn btn-danger btn-sm" %>


      </div>
    </li>
  <% end %>
</ul>
</div>


<%= link_to "Ajouter un film", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Retour aux listes", lists_path, class: "btn btn-secondary" %>
